<view class="maxbox">
  <!-- 顶部搜索框 -->
  <headerSearch></headerSearch>
  <!-- 品牌资讯list -->
  <view class="content">
    <!-- 文章内容 -->
    <view class="box">
      <BrandInformation wx:for="{{article}}" wx:key="_id" article="{{item}}"></BrandInformation>
    </view>
    <!-- 底部loading / 提示 -->
    <view class="footHint">
      <van-loading size="24px" class="load" wx:if="{{articleLoading}}">加载中...</van-loading>
      <view class="noMore" wx:else>
        暂时没有更多了~
      </view>
    </view>
  </view>
</view>