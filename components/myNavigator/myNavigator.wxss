.maxbox {
    padding: 60rpx 30rpx;
    text-align: center;
}

.maxbox .scrView {
    white-space: nowrap;
}

.maxbox .scrView .item {
    display: inline-block;
    padding: 0rpx 25rpx;
}

.maxbox .scrView .item:first-child {
    padding-left: 0;
}

.maxbox .scrView .item .pic {
    width: 105rpx;
    height: 105rpx;
}

.maxbox .scrView .item .pic .img {
    width: 100%;
    height: 100%;
}

.maxbox .scrView .item .pic .text {
    text-align: center;
    padding-top: 10rpx;
    color: var(--globalColor);
}

.maxbox .scrView .item:last-child {
    padding-right: 0rpx;
}